{
  "manifest_version": 3,
  "name": "Readance",
  "version": "1.0.0",
  "description": "Chrome extension for Readance",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "activeTab", "sidePanel"],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  "options_page": "options.html",
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}
